    {
        "endpoint": "/customer/active_orders",
        "section": "customer",
        "method": "GET",
        "description": "Retrieve the list of active orders",
        "parameters": [
            {
                "paramName": "userID",
                "paramType": "string",
                "paramDescription": "The unique identifier of the customer"
            },
            {
